# Enhanced system information randomization

--- a/base/system/sys_info.cc
+++ b/base/system/sys_info.cc
@@ -178,6 +178,48 @@ void SysInfo::GetSystemInfo() {
+  if (base::FeatureList::IsEnabled(features::kEnhancedPrivacy)) {
+    RandomizeSystemInfo();
+  }
+}
+
+void SysInfo::RandomizeSystemInfo() {
+  RandomizeCPUInfo();
+  RandomizeMemoryInfo();
+  RandomizeGPUInfo();
+  RandomizeScreenInfo();
+}
+
+void SysInfo::RandomizeCPUInfo() {
+  // Randomize core count within reasonable bounds
+  cpu_info_.core_count = base::RandInt(4, 16);
+  
+  // Randomize CPU features
+  cpu_info_.cpu_features.RandomizeFeatures();
+  
+  // Modify CPU vendor string
+  cpu_info_.vendor_name = GetRandomizedVendorName();
+}
+
+void SysInfo::RandomizeMemoryInfo() {
+  // Randomize total physical memory
+  uint64_t base_memory = 8589934592;  // 8GB
+  memory_info_.total_physical = base_memory + 
+    (base::RandInt(0, 8) * 1073741824);  // Add 0-8GB
+    
+  // Randomize available memory
+  memory_info_.available_physical = 
+    memory_info_.total_physical * 
+    (0.3 + (base::RandDouble() * 0.4));  // 30-70% available
+}
+
+void SysInfo::RandomizeGPUInfo() {
+  // Randomize GPU information
+  gpu_info_.device_id = GenerateRandomDeviceId();
+  gpu_info_.vendor_id = GenerateRandomVendorId();
+  
+  // Modify GPU capabilities
+  gpu_info_.dx_diagnostics.RandomizeCapabilities();
+  gpu_info_.gl_diagnostics.RandomizeParameters();
+}